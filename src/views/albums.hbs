<div class="settings-albums">
    {{#each albums}}
        <div class="album">
            <div class="img-wrapper">
                <img class="album-img" src="{{#if this.photos.0.url}}{{this.photos.0.url}}{{else}}../img/no-image.png{{/if}}" alt="album-photo">
            </div>
            
            <div class="album-overlay">
                <div class="album-links" data-id="{{this.id}}">
                    <a href="#" class="album-link" name="albumOpen">Open</a>
                    <a href="#" class="album-link" name="albumDelete">Delete</a>
                </div>
            </div>
            
            <p class="album-name">{{this.name}}</p>     
        </div>
    {{else}}
        <p>No albums yet...</p>
    {{/each}}
    
</div>
